			"label": "apiproxy.core/publish",
			"type": "process",
			"command": "dotnet",
			"options": {
				"cwd":"${workspaceFolder}/src/EasyApiProxy.Core"
			},
			"args": [
				"publish",
				"-c",
				"Release",
				// "-r",
				// "win-x64",
