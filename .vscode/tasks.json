			"label": "apiproxy.core/nuget",
			"type": "process",
			"command": "nuget.exe",
			"dependsOn": [
				"apiproxy.core/publish"
			],
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src/EasyApiProxy.Core"
			},
			"args": [
				"pack",
				"Nuget.nuspec",
